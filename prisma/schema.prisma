generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String  @unique
  description String?
  status    Status   @default(TODO)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  TODO
  INPROGRESS
  DONE
}